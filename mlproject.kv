<MainLayout>:
    BoxLayout:
        orientation:"vertical"
        size_hint:1, 1

        BoxLayout:
            orientation:"horizontal"
            padding: 10
            size_hint:1, None
            height:"60dp"
            text:"Top Bar"
            background_color: (40/255, 170/255, 225/255, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos

            BoxLayout:
                orientation:"vertical"

            Button:
                background_color: 0, 0, 0, 0
                size_hint: None, None
                width: "40dp"
                height: "40dp"

                on_press: app.on_press_button("Menu")

                Image:
                    source: 'images/menu_icon.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    keep_ratio: True
                    size_hint: None, None
                    width: "40dp"
                    height: "40dp"

        # Text-to-speech Module.
        BoxLayout:
            orientation:"horizontal"
            padding: 10

            BoxLayout:
                orientation:"vertical"
                padding: 24
                background_color: (1, 1, 1, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [20]

                Label:
                    id: textLabel
                    text: "Text-to-speech"
                    font_size: 16
                    color: 0, 0, 0, 1
                    text_size: self.width, None
                    size_hint: 1, None
                    height: self.texture_size[1]
                    pos_hint: { "x" : 0, "y" : 0.25 }

                Button:
                    background_color: 0, 0, 0, 0
                    size_hint: None, None
                    width: "40dp"
                    height: "40dp"
                    pos_hint: { "right": 1 }

                    on_press: app.on_press_button("Speak")

                    Image:
                        source: 'images/sound_icon.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        keep_ratio: True
                        size_hint: None, None
                        width: "40dp"
                        height: "40dp"
                        color: 30/255, 200/255, 1, 1

        # Camera Module.
        BoxLayout:
            orientation:"horizontal"
            background_color: (0, 0, 0, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos


            FloatLayout:
                size: root.width, root.height

                Image:
                    id: img1

                Button:
                    text: "+"
                    background_color: 1, 1, 1, 0
                    text_color: 1,1,1,1
                    size_hint: None, None
                    width: "40dp"
                    height: "40dp"
                    pos_hint: { "x" : 0.45, "y" : 0.1 }

                    on_press: app.on_press_button("Read")

                    Image:
                        source: 'images/camera_click.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        keep_ratio: True
                        size_hint: None, None
                        width: "60dp"
                        height: "60dp"
                        color: 1, 1, 1, 1

